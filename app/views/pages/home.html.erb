<div class="d-flex justify-content-between" style="height: calc(100vh - 70px)">
  <div class="left d-flex flex-column text-center align-items-center w-50" style="background: url(<%= asset_path 'park.jpg' %>)">
  <h1 style="font-size: 80px; font-weight: bold; margin-top: 250px;">BarkBnB</h1>
  <p>Your Best Friend, One Bark at a Time</p>
        <div class="custom-search", style="margin-bottom: 350px;">
        <%= form_with url: root_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "custom-search-input",
                placeholder: "Search a dog to rent..."
            %>
          <%= button_tag type: "submit", class: "custom-search-botton" do %>
            <i class="fa-solid fa-dog"></i>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="right d-flex flex-column align-items-center justify-content-between w-50">
  <div class="main-text" style="margin: 90px;">
    <h1 style="font-size: 75px; font-weight: bold;">Meet Our Dogs.</h1>
  </div>
  <div class="d-flex dogs" style="margin-bottom: 50px">
    <%= render 'pages/card', dog: @dogs[0] %>
    <%= render 'pages/card', dog: @dogs[1] %>
    <%= render 'pages/card', dog: @dogs[2] %>
  </div>
  </div>
</div>
