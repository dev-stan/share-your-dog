<div class="d-flex justify-content-between" style="height: calc(100vh - 70px)">
  <div class="left d-flex align-items-center w-50" style="background: url(<%= asset_path 'park.jpg' %>)">
        <div class="custom-search">
        <%= form_with url: root_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "custom-search-input",
                placeholder: "Search a dog to rent..."
            %>
          <%= button_tag type: "submit", class: "custom-search-botton" do %>
            <i class="fa-solid fa-dog"></i>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="right d-flex flex-column align-items-center justify-content-between w-50">
  <div class="main-text" style="margin: 60px;">
    <h1 style="font-size: 80px; font-weight: bold;">Share Your Dog.</h1>
