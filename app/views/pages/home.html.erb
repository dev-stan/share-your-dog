  </div>
  <div class="d-flex dogs" style="margin-bottom: 50px">
    <%= render 'pages/card', dog: @dogs[0] %>
    <%= render 'pages/card', dog: @dogs[1] %>
    <%= render 'pages/card', dog: @dogs[2] %>
  </div>
  </div>
</div>
