

<div class="row">


    <div class="col-6">
    <h1>Hello world!</h1>
      <div class="row">
      <% @dogs.order(:id).each do |dog| %>
        <div class="col-6">
          <%= render 'pages/card', dog: dog %>
        </div>
      <% end %>
      </div>
    </div>

  <div class="col-6">
    <div style="width: 100%; height: 100vh; position: sticky; top: 70px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
